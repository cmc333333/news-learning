!!!5
html(lang="en")
  head
    title Classify Article
  body
    h1= article.title()
    div= article.body()
    form(method="POST")
      p Classify
      input(type="hidden", name="article_id", value={article.id()})
      input(type="submit", name="classify-yes", value={tset.yesLabel()})
      input(type="submit", name="classify-no", value={tset.noLabel()})
      table
        for pair in mtXp
          modelType = pair._1
          prediction = pair._2
          tr
            td=modelType.description()
            td={prediction + "%"}
